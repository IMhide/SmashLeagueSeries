<%= render partial: "layouts/sub_header", locals: {image_name: 'lol-pic-2.jpg', text: 'Les matches'} %>

<section class="matches-section">
  <div class="auto-container">
    <div class="matches-info-tabs">
      <div class="matches-tabs tabs-box">
        <ul class="tab-btns tab-buttons clearfix">
          <li data-tab="#classement" class="tab-btn active-btn"><span>Saison 1</span></li>
        </ul>
        <div class="tabs-content">
          <div class="tab active-tab" id="classement">
            <div class="content">
              <div class="matches-block">
                <div class="inner-block">
                  <div class="row clearfix">
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>POS</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-6 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>TEAMS</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>Victoire</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>Defaite</h2>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="matches-block">
                <div class="inner-block">
                  <div class="row clearfix">
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>1</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-6 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>Smash me more</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>0</h2>
                      </div>
                    </div>
                    <div class="content-column col-lg-2 col-md-12 col-sm-12">
                      <div class="inner-column">
                        <h2>0</h2>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="matches-section">
  <div class="auto-container">
    <div class="matches-info-tabs">
      <div class="matches-tabs tabs-box">
        <ul class="tab-btns tab-buttons clearfix">
          <li data-tab="#prod-all" class="tab-btn active-btn"><span>Prochains matches</span></li>
          <li data-tab="#prod-matches" class="tab-btn"><span>Matches termin√©s</span></li>
          <li data-tab="#prod-results" class="tab-btn"><span>Tous les matches</span></li>
        </ul>
        <div class="tabs-content">
          <div class="tab active-tab" id="prod-all">
            <div class="content">
              <% @scheduled.each do |match| %>
                <%= render partial: "matches/match_block", locals: {match: match} %>
              <% end %>
            </div>
          </div>
          <div class="tab" id="prod-matches">
            <div class="content">
              <% @played.each do |match| %>
                <%= render partial: "matches/match_block", locals: {match: match} %>
              <% end %>

            </div>
          </div>
          <div class="tab" id="prod-results">
            <div class="content">
              <% @all.each do |match| %>
                <%= render partial: "matches/match_block", locals: {match: match} %>
              <% end %>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</section>
